<header id="gh-navigation" class="gh-navigation is-{{#match navigationLayout "Logo on the left"}}left-logo{{else match navigationLayout "Stacked"}}stacked{{else}}middle-logo{{/match}}{{#match @custom.header_and_footer_color "Accent color"}} has-accent-color{{/match}} gh-outer">
    <div class="gh-navigation-inner gh-inner">

        <div class="gh-navigation-brand">
            <a class="gh-navigation-logo is-title" href="{{@site.url}}">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    {{@site.title}}
                {{/if}}
            </a>
            {{> "search-toggle"}}
            <button class="gh-burger gh-icon-button">
                {{> "icons/burger"}}
                {{> "icons/close"}}
            </button>
        </div>

        <nav class="gh-navigation-menu">

{{#if isSecondary}} 
    {{#foreach navigation}}   
<li class="pt-5"><a aria-label="{{slug}}"  class="nav-{{slug}}{{#if current}} nav-current{{/if}} leading-none flex items-center text-gray-500 text-base font-bold hover:text-orange-400 duration-500" href="{{url absolute="true"}}">{{label}} </a></li>
    {{/foreach}}

{{else}}
  
            {{navigation}}

{{#if @site.secondary_navigation}}
                     <li class="relative dropdown-dots pt-5 lg:pt-0 block">
                        <span class="toggle-dropdown block p-2 px-5 cursor-pointer">
                           <svg width="20" height="4" viewBox="0 0 20 4" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <circle cx="2" cy="2" r="2" fill="#393939" />
                              <circle cx="10" cy="2" r="2" fill="#393939" />
                              <circle cx="18" cy="2" r="2" fill="#393939" />
                           </svg>
                        </span>
                        <ul class="dropdown-menu hidden lg:mt-2 bg-white lg:absolute top-full lg:shadow-base lg:w-48 px-5 rounded-xl"> {{navigation type="secondary"}} </ul>
                     </li>
                     {{/if}}

            {{#unless @site.members_enabled}}
                {{#match navigationLayout "Stacked"}}
                    {{> "search-toggle"}}
                {{/match}}
            {{/unless}}
{{/if}}





        </nav>

        <div class="gh-navigation-actions">
            {{#unless @site.members_enabled}}
                {{^match navigationLayout "Stacked"}}
                    {{> "search-toggle"}}
                {{/match}}
            {{else}}
                {{> "search-toggle"}}
                <div class="gh-navigation-members">
                    {{#unless @member}}
                        {{#unless @site.members_invite_only}}
                            <a href="#/portal/signin" data-portal="signin">Sign in</a>
                            {{#unless hideSubscribeButton}}
                                <a class="gh-button" href="#/portal/signup" data-portal="signup">Subscribe</a>
                            {{/unless}}
                        {{else}}
                            <a class="gh-button" href="#/portal/signin" data-portal="signin">Sign in</a>
                        {{/unless}}
                    {{else}}
                        <a class="gh-button" href="#/portal/account" data-portal="account">Account</a>
                    {{/unless}}
                </div>
            {{/unless}}
        </div>

    </div>
</header>
