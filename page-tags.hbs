{{!< default}}

{{#get "tags" include="count.posts" order="count.posts desc" limit="all"}}
  {{#if tags}}
     <section class="gh-archive{{#if feature_image}} has-image{{/if}}{{#if @custom.show_publication_info_sidebar}} has-sidebar{{/if}} gh-inner">
            <div class="gh-archive-inner">
                <header class="gh-archive-wrapper">
                    <h1 class="gh-article-title is-title">{{t "Explore Our Tags"}}</h1>
                    {{#if description}}
                        <p class="gh-article-excerpt">{{description}}</p>
                    {{/if}}
                </header>
                {{> "feature-image"}}
            </div>


         
        </section>

        <div class="container pb-20 pt-10">
            <div class="card-tags-box grid  md:grid-cols-4 sm:grid-cols-3 grid-cols-2  gap-8">
         {{#foreach tags}}
         <div class="tags-item">
            <a class="tags-box relative group  duration-500" data-aos="fade-up " data-aos-delay="0" href="{{url}}">
               <div class="tags-images overflow-hidden">
                  {{#if feature_image}}
                  <img class=" group-hover:scale-105 duration-500   h-[200px] w-full   object-cover" src=" {{img_url feature_image}}  " alt="{{name}}"> 
                  {{/if}}
               </div>
               <div class="tags-text mt-6">
                  <h3 class="font-bold ">{{name}}</h3>
               </div>
            </a>
            <div class="count-post">
               <p>{{plural count.posts empty='No posts' singular='% post' plural='% posts'}}</p>
            </div>
         </div>
         {{/foreach}}
      </div>
        </div>
  {{/if}}
{{/get}}
